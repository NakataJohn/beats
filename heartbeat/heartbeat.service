[Unit]
Description=heartbeats
After=network-online.target
Wants=network-online.target

[Service]
# modify when deploy in prod env
User=root
Group=root

Type=simple
Environment="GIN_MODE=release"
ExecStart=/data/elk/heartbeat-8.x.x/heartbeat -e
WorkingDirectory=/data/elk/heartbeat-8.x.x/

Restart=always
RestartSec=1
StartLimitInterval=0

# LimitNOFILE=60000
# LimitNPROC=10000

[Install]
WantedBy=multi-user.target
